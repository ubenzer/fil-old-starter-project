article
  .date
    text-transform uppercase
    color $text_secondary
    margin-bottom 10px
  .content
    overflow auto
    img.right
      width 200px
      margin 0 auto
      display block
      +gt-sm()
        float right


  iframe#comments
    width 100%
    border 0
    height 50px
  .card-actions
    display flex
    justify-content space-between
    align-items center

    .comment-info
      line-height 24px
      color $text_secondary
      .comment-count
        margin-right 6px
      .icon
        vertical-align middle
        opacity $opacity_secondary
