.sidebar
  margin-right 10px
  display none
  +gt-sm()
    display block

  .about
    margin 10px 0
    text-align center

    img.profile
      border 4px solid rgba(255, 255, 255, 0.16)
      shadow-2()
      width 100%
      max-width 140px
      border-radius 999px

    h1.name, h2.mini-bio
      font-size 24px
      font-weight 300
      color $text_primary
      margin 0
      line-height: 1.1em

    h2.mini-bio
      line-height: 1em;
      font-size 14px
      font-weight 300
      color $text_secondary
